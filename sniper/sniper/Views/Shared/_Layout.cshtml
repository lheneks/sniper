<!DOCTYPE html>
<html ng-app="sniper">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Snipe it</title>

        @Styles.Render("~/Content/css")

        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
                <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.19/angular.min.js"></script>
                <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.19/angular-route.min.js"></script>
                <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.19/angular-animate.min.js"></script>

        @Scripts.Render("~/bundles/libjs")
    </head>

    <body>
@*    <body ng-controller="ApplicationController">*@
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Sniper", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li><a href="#/search/add-config">Add Search</a></li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year </p>
            </footer>
        </div>

    </body>

    <script type="text/javascript">
        var sniper = angular.module('sniper', ['LocalStorageModule', 'ngRoute', 'ngAnimate'], function ($provide) {
            $provide.factory('ControllerCommunicator', ['$rootScope', function ($rootScope) {
                return {
                    broadcast: function (event, msg) {
                        $rootScope.$broadcast(event, msg);
                    }
                };
            }]);
        });
    </script>

    @Scripts.Render("~/bundles/appjs")

</html>
